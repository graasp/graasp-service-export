{
  "name": "graasp-service-exporter",
  "jest": {
    "collectCoverageFrom": [
      "src/services/*.js",
      "!src/services/utils.js",
      "!src/services/sns.js",
      "!src/services/cover.js"
    ]
  },
  "version": "0.2.0",
  "description": "Service to export PDF, PNG and EPUB versions of learning spaces on Graasp.",
  "main": "src/index.js",
  "author": "Graasp",
  "contributors": [
    "Juan Carlos Farah",
    "Andr√© Nogueira",
    "Hassan Abdul Ghaffar",
    "Kim Lan Phan Hoang"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "babel src -d dist --ignore **/*.test.js && mkdir -p dist/tmp && mkdir -p dist/services/css && cpy 'src/services/css/*.css' 'dist/services/css/' ",
    "test": "mkdir -p src/tmp && jest src && rm -r src/tmp",
    "test:coverage": "mkdir -p src/tmp && jest src --coverage && rm -r src/tmp",
    "lint": "eslint .",
    "start": "yarn start:local",
    "start:debug": "SLS_DEBUG=* serverless offline start --stage local",
    "prestart:local": "yarn build",
    "prestart:dev": "yarn build",
    "start:local": "serverless offline start --stage local",
    "start:dev": "serverless offline start --stage dev",
    "predeploy:dev": "yarn build",
    "predeploy:prod": "yarn build",
    "domain:create:dev": "serverless create_domain --stage dev",
    "domain:delete:dev": "serverless delete_domain --stage dev",
    "domain:create:prod": "serverless create_domain --stage prod",
    "domain:delete:prod": "serverless delete_domain --stage prod",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "prettier": "prettier --check 'src/**/*.js'",
    "prettier:check": "prettier --check 'src/**/*.js'",
    "release": "standard-version --commit-all",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "hooks:install": "node node_modules/husky/husky.js install"
  },
  "dependencies": {
    "@babel/runtime": "7.4.5",
    "aws-sdk": "2.464.0",
    "bson-objectid": "1.2.5",
    "canvas": "2.5.0",
    "cheerio": "1.0.0-rc.3",
    "chrome-aws-lambda": "1.17.1",
    "cpy-cli": "2.0.0",
    "dateformat": "3.0.3",
    "epub-gen": "https://github.com/graasp/epub-gen",
    "glob": "7.1.4",
    "html-entities": "1.2.1",
    "puppeteer": "1.17.0",
    "raven": "2.6.4",
    "request": "2.88.0",
    "request-promise-native": "1.0.7",
    "rimraf": "2.6.3",
    "serverless-sentry-lib": "1.1.2",
    "superagent": "5.0.5",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.15.3",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "jest": "24.8.0",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "serverless": "1.44.0",
    "serverless-domain-manager": "3.1.0",
    "serverless-offline": "4.9.2",
    "serverless-offline-sns": "0.49.0",
    "serverless-s3-local": "0.3.23",
    "serverless-sentry": "1.2.0",
    "standard-version": "5.0.2"
  },
  "release": {
    "analyzeCommits": "conventional"
  }
}
